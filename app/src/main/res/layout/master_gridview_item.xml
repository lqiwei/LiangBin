<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <ImageView
        android:id="@+id/master_grid_view_item_img"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/master_grid_view_item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:layout_below="@id/master_grid_view_item_img"
        android:layout_alignLeft="@id/master_grid_view_item_img"/>
    <TextView
        android:id="@+id/master_grid_view_item_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:singleLine="true"
        android:layout_below="@id/master_grid_view_item_name_tv"
        android:layout_alignLeft="@id/master_grid_view_item_img"/>
</RelativeLayout>